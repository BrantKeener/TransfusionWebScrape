
<section id="modal-bg" class="modal-close invisible">
  <section id="modal-card">
    <button id="modal-close-button" class="modal-close">&times;</button>
    <section id="article-comment-area">
      <section id="modal-article">
        {{!-- Populate the modal from JavaScript --}}
      </section>
      <section id="modal-comment">     
        {{!-- Populate the modal from JavaScript --}}
      </section>
      </section>
  </section>
</section>

{{#each articles}}
<section class="article-index" data-articleid="{{this._id}}">
  <ul class="article"><a class='modal-open'></a>
      <li class="article-title"><h2>{{this.title}}</h2>
        <ul>
          <li class="article-interviewee"><h3>Interviewee:</h3> {{this.interviewee}}</li>
          <li class="article-summary"><h3>Summary:</h3> {{this.summary}}</li>
          <li class="article-dateReleased"><h3>Date Released:</h3> {{this.dateReleased}}</li>
          <li class="article-URL"><a href="{{this.URL}}" target="_blank">Link to the episode</a></li>
        </ul>
      </li>
  </ul>
</section>
{{/each}}
